n = int(input("Give me a positive number: "))
def odd_or_even_checker(x):
    if x%2 == 0:
        odd = False
    else:
        odd = True

    return odd

count = 0


while n != 1:
    if not odd_or_even_checker(n):
        n = n/2
        print(n)
    else:
        n = 3 * n + 1
        print(n)
    count += 1
print("The total number of steps is: "  + str(count))
